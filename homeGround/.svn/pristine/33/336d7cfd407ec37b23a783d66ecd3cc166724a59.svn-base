<%@page import="java.text.SimpleDateFormat"%>
<%@page import="board.BoardVO"%>
<%@page import="java.util.List"%>
<%@page import="board.BoardDAO"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>:: Content View ::</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
	<link rel="stylesheet" type="text/css" href="../css/style.css" media="all" />
	<link rel="stylesheet" type="text/css" href="../css/board.css" media="all" />
	<%
		String value = request.getParameter("list");
		BoardDAO dao = new BoardDAO();
		List<BoardVO> list = dao.getAllBoards();
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd hh:mm:ss");
		
		String value1 = request.getParameter("no");
		int no = Integer.parseInt(value1);		
		BoardVO vo = dao.getContentView(no);
	%>
</head>
<body>
	<div id="container">
		<p class="title">게시판 뷰페이지</p>
		<div id="list_view">
			<table class="table table-striped table-bordered " border="0">
				<colgroup>
					<col width="10%"/>
					<col width="*"/>
					<col width="10%"/>
					<col width="10%"/>
					<col width="10%"/>
					<col width="25%"/>
				</colgroup>
				<tbody>
					<tr>
							
						<th rowspan="2"><%=vo.getNo() %></th>
						<th rowspan="2"><%=vo.getTitle() %></th>
						<th>좋아요<a href="boardLike.jsp?no=<%=vo.getNo()%>"><img src="../images/like.gif" alt="좋아요" /></a></th>
						<th>싫어요<a href="boardHate.jsp?no=<%=vo.getNo()%>"><img src="../images/hate.gif" alt="싫어요" /></a></th>
						<th>작성자</th>
						<th>등록일</th>
					</tr>
					<tr>
						<td><%=vo.getLike() %></td>
						<td><%=vo.getHate() %></td>
						<td>홍길동</td>
						<td><%=sdf.format(vo.getRegdate()) %></td>
					</tr>
					<tr>
						<td colspan="6"><%=vo.getContents() %></td>
					</tr>
				</tbody>
			</table>
			
			<div class="edit">
			<a class="btn btn-primary modify" href="boardModify.jsp?no=<%=no %>">수정</a>
			<a class="btn btn-primary delete" href="boardremove.jsp?no=<%=no %>">삭제</a>
			</div>
			
			
			<div class="btn">
			<a class="btn btn-primary write" href="boardList.jsp">목록</a>
			<a class="btn btn-primary prev" href="boardDetail.jsp?no=<%=vo.getNo() %>">이전글</a>
			<a class="btn btn-primary next" href="boardDetail.jsp?no=<%=vo.getNo()+1 %>">다음글</a>
			</div>
			
			<div class="comment">
			
			</div>
		</div> <!-- // list -->
	</div> <!-- // container -->
</body>
</html>