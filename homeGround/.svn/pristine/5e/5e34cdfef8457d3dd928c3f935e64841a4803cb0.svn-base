<%@page import="java.util.List"%>
<%@page import="result.ResultDAO"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
	int teamNo = (Integer)session.getAttribute("teamNo");
	ResultDAO dao = new ResultDAO();
	List<String> teamNames = dao.getAllTeamName(teamNo);
	String myTeam = dao.getTeamNameByNo(teamNo);
	
	
%>    

<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Insert title here</title>
<script type="text/javascript" src="../jquery/jquery-1.11.3.js"></script>
<script type="text/javascript">
	$(document).ready(function(){
		$("#cancle").click(function(){
			location.href="resultList.jsp";
		});
	});
</script>
</head>
<body>
<h1>경기 결과 입력</h1>
<form method="post" action="resultSave.jsp">
	<table border="1">
		<tr>
			<th>상대팀

			</th>
			<td>
				<select name="rival-team">

<%
			for(String s : teamNames) {
%>					
					<option value="<%=s %>"><%=s %></option>
<%} %>			
				</select>
			</td>
			<th>우리팀</th><td colspan="2"><%=myTeam %></td>
		</tr>
		<tr>
			<th>R(득점)</th>
			<td><input type="text" name="rival-runs"/></td>
			<th>R</th>
			<td><input type="text" name="my-runs"/></td>
		</tr>
		
		<tr>
			<th>H(안타)</th>
			<td><input type="text" name="rival-hits"/></td>
			<th>H</th>
			<td><input type="text" name="my-hits"/></td>
		</tr>
		
		<tr>
			<th>E(실책)</th>
			<td><input type="text" name="rival-error"/></td>
			<th>E</th>
			<td><input type="text" name="my-error"/></td>
		</tr>
		
		<tr>
			<th>B(볼넷)</th>
			<td><input type="text" name="rival-balls"/></td>
			<th>B</th>
			<td><input type="text" name="my-balls"/></td>
		</tr>
	</table>
	<input type="submit" value="등록" />
	<input type="button" id="cancle" value="취소"/>
</form>
</body>
</html>