<%@page import="notice.NoticeVO"%>
<%@page import="notice.NoticeDAO"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
	int pno = Integer.parseInt(request.getParameter("pno"));
	int num = Integer.parseInt(request.getParameter("no"));
	
	NoticeDAO dao = new NoticeDAO();
	NoticeVO vo =  dao.getTitleInfo(num);
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
	function like() {
		alert("좋아요를 누르셨습니다.");
		location.href="updateLike.jsp?no=<%=num %>&pno=<%=pno %>";
	}
	
	function hate() {
		alert("싫어요를 누르셨습니다.");
		location.href="updateHate.jsp?no=<%=num %>&pno=<%=pno %>";

	}
</script>
<style type="text/css">
	td {background-color: gray; font-size: 18px; font-weight: bold; font-style: oblique; color: white; text-align: center;}	
	
</style>
</head>
<body>
<h1>상세정보</h1>
<table border="1" style="width: 700px">
<tr>
	<td>제목</td>
	<td>글쓴이</td>
	<td>좋아요</td>
	<td>싫어요</td>
	<td>날짜</td>
</tr>
<tr>
	<th><%=vo.getTitle() %></th>
	<th>곽태민</th>
	<th><%=vo.getLike() %></th>
	<th><%=vo.getHate() %></th>
	<th><%=vo.getDate() %></th>
</tr>
<tr>
	<td colspan="5">내용</td>
</tr>
<tr>
	<th colspan="5" height="100px"><%=vo.getContents() %></td>
</tr>
</table>
<br/>

<input type="button" value="좋아요" onclick="like()"/>
<input type="button" value="싫어요" onclick="hate()"/>

<p><a href="noticeDelete.jsp?no=<%=num %>&amp;pno=<%=pno %>">삭제</a></p>
<p><a href="noticeUpdate.jsp?no=<%=num %>&amp;pno=<%=pno %>">수정</a></p>
<p><a href="noticeList.jsp?pno=<%=pno %>">목록으로</a></p>
</body>
</html>