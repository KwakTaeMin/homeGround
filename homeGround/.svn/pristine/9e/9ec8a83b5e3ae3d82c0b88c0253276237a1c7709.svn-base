	/* login_box */
	#login {width:280px; height:25%; background-color:#FFF; border-radius:10px; border:1px solid #000; position:absolute; right:5%; top:2%; padding:10px; z-index:10;}
	#login input {width:204px; height:24px; padding:2px; border:1px solid #000; margin-bottom:5px; border-radius:3px;}
	input#login_box {width:56px; height:28px; }
	#login input[type="checkbox"] {width:15px; height:15px; margin:0; border:0 none;}
	#login span.idsave {font-size:12px; font-weight:bold; color:#000; line-height:12px;}
	#login span.pwsch {font-size:12px; font-weight:bold; color:#000; text-decoration:underline; margin-left:10px; line-height:12px;}
	#login h3 {height:35px; border-bottom:1px dotted #000; margin-bottom:10px; font-weight:bold; color:#000;}
	#login h3 span {font-size:12px; letter-spacing:-1px; color:#0000ff;}
	#login input {width:260px; height:24px; padding:2px; border:1px solid #000; margin-bottom:5px; border-radius:3px;}
