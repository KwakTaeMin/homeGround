<%@page import="java.text.SimpleDateFormat"%>
<%@page import="board.BoardDAO"%>
<%@page import="board.BoardVO"%>
<%@page import="java.util.List"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%> 
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>:: Content List ::</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
	<link rel="stylesheet" type="text/css" href="../css/style.css" media="all" />
	<link rel="stylesheet" type="text/css" href="../css/board.css" media="all" />
	<link rel="shortcut icon" type="image/x-icon" href="/fav.ico" />
	<%
		String value = request.getParameter("list");
		BoardDAO dao = new BoardDAO();
		List<BoardVO> list = dao.getAllBoards();
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd hh:mm:ss");
		
		
	%>
</head>
	<body>
	<div id="container">
		<p class="title">게시판 목록</p>
		<div id="list">
			<table class="table table-hover">
				<colgroup>
					<col width="10%"/>
					<col width="*"/>
					<col width="15%"/>
					<col width="10%"/>
					<col width="20%"/>
				</colgroup>
				<thead>
					<tr>
						<th>번호</th>
						<th>내용</th>
						<th>작성자</th>
						<th>좋아요</th>
						<th>등록일</th>
					</tr>
				</thead>
				<tbody>
				<% for ( BoardVO b : list ) { %>
					<tr>
						<td><%=b.getNo() %></td>
						<td><a href="boardDetail.jsp?no=<%=b.getNo() %>"><%=b.getTitle() %></a></td>
						<td>홍길동</td>
						<td><%=b.getLike() %></td>
						<td><%=sdf.format(b.getRegdate()) %></td>
					</tr>
				<% } %>
					
				</tbody>
			</table>
			<a class="btn btn-primary write" href="boardForm.jsp">글쓰기</a>
		</div> <!-- // list -->
		<div class="page">
			<span><a href="#"><img src="../images/prev.jpg" alt="이전" /></a></span>
			<a href="#">1</a>
			<a href="#">2</a>
			<a href="#">3</a>
			<a href="#">4</a>
			<a href="#">5</a>
			<a href="#">6</a>
			<a href="#">7</a>
			<a href="#">8</a>
			<a href="#">9</a>
			<a href="#">10</a>
			<span><a href="#"><img src="../images/next.jpg" alt="다음" /></a></span>
		</div> <!-- //page -->
	</div> <!-- // container -->
	</body>
</html>
</html>