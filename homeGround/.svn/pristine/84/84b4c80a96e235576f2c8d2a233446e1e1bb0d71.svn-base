<%@page import="java.text.SimpleDateFormat"%>
<%@page import="java.util.Date"%>
<%@page import="result.ResultVO"%>
<%@page import="result.ResultDAO"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@include file="resultDetailInclude.jsp" %>
<%
	
%>    

<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Insert title here</title>

<meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

<script type="text/javascript" src="../jquery/jquery-1.11.3.js"></script>
<script type="text/javascript">
	
	$(document).ready(function(){
		$("#list").click(function(){
			location.href="resultList.jsp?pno=<%=pno %>&teamNo=<%=teamNo %>";
		});
	});
	
	$(document).ready(function(){
		$("#delete").click(function(){
			location.href="resultPop.jsp?pno=<%=pno %>&no=<%=no %>&teamNo=<%=teamNo %>";
		});
	});
	
	$(document).ready(function(){
		$("#update").click(function(){
			location.href="resultUpdateForm.jsp?pno=<%=pno %>&no=<%=no %>&teamNo=<%=teamNo %>";
		});
	});
</script>
</head>
<body>

<div class="container">
<h3><%=gameDate %></h3>
<table border="1" style="width: 400px;">
	<tr>
		<th>팀</th>
		<th>스코어</th>
		<th>R</th>
		<th>H</th>
		<th>E</th>
		<th>B</th>
	</tr>
	<tr>
		<td><%=myTeam %></td>
		<td><%=myRuns %></td>
		<td><%=myRuns %></td>
		<td><%=myHits %></td>
		<td><%=myError %></td>
		<td><%=myBalls %></td>
	</tr>
	<tr>
		<td><%=rivalTeam %></td>
		<td><%=rivalRuns %></td>
		<td><%=rivalRuns %></td>
		<td><%=rivalHits %></td>
		<td><%=rivalError %></td>
		<td><%=rivalBalls %></td>
	</tr>
</table>
<input type="button" id="list" value="이전 목록" />
<%
	int mNo = (Integer)session.getAttribute("memNo");
	int coachNo = dao.getCoachNoByTeamNo(teamNo);
	
	if(mNo == coachNo) {%>
		<input type="button" id="delete" value="삭제하기" />
		<input type="button" id="update" value="수정하기" />
	<%}%>


<div>
<h5>댓글</h5>
	<form method="post" action="resultSaveComment.jsp?pno=<%=pno %>&no=<%=no %>&teamNo=<%=teamNo %>">
		<textarea rows="2" cols="50" name="comment"></textarea>
		<input type="submit" value="등록">
	</form>
</div>

<div id="reply">
	<%
	
	for(ResultReplyVO r : replies) {
		System.out.println(r);
		String memId = r.getMemId();
		int memNo = r.getMemNo();
		int cNo = r.getCommentNo();
		String contents = r.getContents();
		Date date = r.getGameDate();
		SimpleDateFormat sdf2 = new SimpleDateFormat("yy.M.d hh:mm");
		String gDate = sdf2.format(date);
		
	%>
	<p><%=memId %> <%=contents %> <%=gDate %>
		<%if(memNo == myNo) {%>
		<button onclick="location.href='resultDeleteComment.jsp?pno=<%=pno %>&no=<%=no %>&cno=<%=cNo %>&mno=<%=memNo %>&teamNo=<%=teamNo %>'">삭제</button></p>
			
		<% } else {}%>
	<%} %>	
	
</div>
</div>
</body>
</html>